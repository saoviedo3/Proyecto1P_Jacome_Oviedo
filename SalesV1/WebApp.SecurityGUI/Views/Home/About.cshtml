@model IEnumerable<Entities.Categories>

<h2>Categorías</h2>
<a href="@Url.Action("CreateCategory", "Home")" class="btn btn-primary">Crear Categoría</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryID</td>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    <a href="@Url.Action("EditCategory", "Home", new { id = category.CategoryID })" class="btn btn-warning">Editar</a>
                    <form action="@Url.Action("DeleteCategory", "Home")" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@category.CategoryID" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
